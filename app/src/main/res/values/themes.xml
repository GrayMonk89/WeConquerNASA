<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="DefaultTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="android:navigationBarColor">?superColorPrimary</item>
        <item name="colorPrimary">?superColorPrimary</item>
        <item name="colorPrimaryVariant">?superColorPrimary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">?superColorSecondary</item>
        <item name="colorSecondaryVariant">?superColorSecondary</item>
        <item name="colorOnSecondary">?superColorOnSecondary</item>
        <item name="colorPrimaryContainer">?superColorPrimary</item>
        <item name="colorOnPrimaryContainer">?superColorOnPrimary</item>
        <item name="colorPrimaryInverse">?superColorPrimary</item>
        <item name="colorSecondaryContainer">?superColorSecondary</item>
        <item name="colorOnSecondaryContainer">?superColorOnSecondary</item>
        <item name="colorTertiary">?superColor</item>
        <item name="colorOnTertiary">@color/white</item>
        <item name="colorTertiaryContainer">?superColor</item>
        <item name="colorOnTertiaryContainer">?superColor</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?superColor</item>
        <!-- Customize your theme here. -->
        <item name="textInputStyle">@style/MyStyle</item>
        <item name="floatingActionButtonStyle">@style/MyStyleFloatingActionButton</item>
        <item name="chipStyle">@style/MyChipStyle</item>

        <item name="textAppearanceBody2">@style/MyTextAppearance</item>

    </style>

    <style name="BlueTheme" parent="DefaultTheme">
        <item name="superColor">@color/blue</item>
        <item name="superColorPrimary">@color/blue</item>
        <item name="superColorSecondary">@color/blue</item>
        <item name="superColorOnPrimary">@color/blue</item>
        <item name="superColorOnSecondary">@color/blue</item>
    </style>

    <style name="RedTheme" parent="DefaultTheme">
        <item name="superColor">@color/red</item>
        <item name="superColorPrimary">@color/red_700</item>
        <item name="superColorSecondary">@color/red_100</item>
        <item name="superColorOnPrimary">@color/red_600</item>
        <item name="superColorOnSecondary">@color/red_100</item>
    </style>

    <style name="GreenTheme" parent="DefaultTheme">
        <item name="superColor">@color/green</item>
        <item name="superColorPrimary">@color/green</item>
        <item name="superColorSecondary">@color/green</item>
        <item name="superColorOnPrimary">@color/green</item>
        <item name="superColorOnSecondary">@color/green</item>
    </style>
</resources>