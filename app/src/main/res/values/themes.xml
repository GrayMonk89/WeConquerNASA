<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WeConquerNASA" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/my_color_1</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/my_color_3</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">#663700B3</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/my_color_5</item>
        <!-- Customize your theme here. -->
        <item name="textInputStyle">@style/MyStyle</item>
        <item name="floatingActionButtonStyle">@style/MyStyleFloatingActionButton</item>
        <item name="chipStyle">@style/MyChipStyle</item>
    </style>

    <style name="MyChipStyle" parent="Widget.MaterialComponents.Chip.Choice">
    </style>

    <style name="MyStyleFloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="tint">@color/red_600</item>
    </style>

    <style name="MyStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">#034AFF</item>
        <item name="helperTextEnabled">false</item>
        <item name="counterEnabled">false</item>
        <item name="errorTextColor">#034AFF</item>
    </style>
</resources>